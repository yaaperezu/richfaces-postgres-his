<jboss-deployment-structure xmlns="urn:jboss:deployment-structure:1.2">
    <deployment>
        <exclusions>
            <module name="org.hibernate"/>
        </exclusions>
        <module-spec name="deployment.his-ear.ear.jboss-seam">
            <resource-roots>
                <resource-root path="jboss-seam.jar"/>
            </resource-roots>
        </module-spec>
    </deployment>

    <sub-deployment name="his-ejb.jar">
        <dependencies>
            <module name="deployment.his-ear.ear"/>
            <module name="deployment.his-ear.ear.jboss-seam"/>
        </dependencies>
    </sub-deployment>

    <sub-deployment name="his-war.war">
        <dependencies>
            <module name="deployment.his-ear.ear"/>
        </dependencies>
    </sub-deployment>
</jboss-deployment-structure>